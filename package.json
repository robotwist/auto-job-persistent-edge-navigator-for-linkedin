{
  "name": "job-application-bot",
  "version": "1.0.0",
  "description": "Automated job application tool for various job sites",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "apply:linkedin": "node main.js --platform=linkedin",
    "apply:indeed": "node main.js --platform=indeed",
    "apply:ziprecruiter": "node main.js --platform=ziprecruiter",
    "profile:dev": "node main.js --profile=junior_developer",
    "profile:qa": "node main.js --profile=qa_engineer",
    "profile:support": "node main.js --profile=tech_support"
  },
  "keywords": [
    "job",
    "application",
    "automation",
    "linkedin",
    "indeed",
    "ziprecruiter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "natural": "^6.2.0",
    "playwright": "^1.30.0",
    "yargs": "^17.7.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
